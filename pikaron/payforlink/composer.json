{
    "name": "pikaron/payforlink",
    "type": "phpbb-extension",
    "description": "This extension is a complement by the EXTENSION Ultimate Points by dmzx & posey with which we have the ability to create external links, accessible only if the points balance of the user is positive. Once accessed, points are deducted of user account and add points for 50% of the cost to the creator of the link.",
    "homepage": "https://www.phpbb-es.com/foro/viewtopic.php?t=42185",
    "version": "3.3.0",
    "time": "2022-12-04",
    "keywords": ["phpbb", "extension", "Ultimate Points", "Ultimate", "Points"],
    "license": "GPL-2.0",
    "authors": [
        {
            "name": "Picaron",
            "homepage": "http://www.ascensoristas.net",
            "role": "Extension Developer"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "phpbb/phpbb": ">=3.3.0"
    },
    "extra": {
        "display-name": "Pay For Link",
        "soft-require": {
            "phpbb/phpbb": ">=3.3.0"
        },
        "version-check": {
            "host": "www.siteproall.com",
            "directory": "/pikaron/payforlink",
            "filename": "payforlink_version"
        }
    }
}